<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/foodDetailsFragment"
        android:name="com.hozanbaydu.soul.FoodDetailsFragment"
        android:label="fragment_food_details"
        tools:layout="@layout/fragment_food_details" >
        <argument
            android:name="uuid"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_foodDetailsFragment_to_mainFragment"
            app:destination="@id/mainFragment" >
            <argument
                android:name="uuid"
                android:defaultValue="0" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.hozanbaydu.soul.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_foodDetailsFragment"
            app:destination="@id/foodDetailsFragment" >
            <argument
                android:name="uuid"
                android:defaultValue="0" />
        </action>
        <argument
            android:name="uuid"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_mainFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.hozanbaydu.soul.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>